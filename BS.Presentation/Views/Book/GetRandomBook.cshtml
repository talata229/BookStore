<div class="categories">
    <ul>
        <h3 class="text-center"><em class="fa fa-random">&nbsp;</em>Sách ngẫu nhiên</h3>
        <div class="getbook text-center">
            <div class="picMarquee-top">
                <div class="hd">
                    <a class="next"></a>
                    <a class="prev"></a>
                </div>
                <div class="bd">
                    <ul class="picList">
                        @foreach (var item in Model)
                        {
                            <li class="randomBook">
                                <p class="pic"><a href="@Url.Action("DetailBook","Book",new {@bookId = item.BookId})" style="background:none; padding-bottom:0px;"><img src="@Url.Content("~/ImagesBook/"+item.Image)" /></a></p>
                                <p class="title"><a href="@Url.Action("DetailBook","Book",new {@bookId = item.BookId })"  style="background:none;border-bottom: 1px solid blue; padding:5px 0px;">@item.Title</a></p>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </ul>
</div>


    <style type="text/css">
        .picMarquee-top {
            /*width: 210px;*/
            overflow: hidden;
            position: relative;
            border: 1px solid red;
        }

            .picMarquee-top .hd {
                overflow: hidden;
                height: 30px;
                background: #f4f4f4;
                padding: 0 10px;
            }

                .picMarquee-top .hd .prev,
                .picMarquee-top .hd .next {
                    display: block;
                    width: 9px;
                    height: 5px;
                    float: right;
                    margin-right: 5px;
                    margin-top: 10px;
                    overflow: hidden;
                    cursor: pointer;
                    /*background: url("~/assets/client/SuperSlide/images/arrow.png") 0 -100px no-repeat;*/
                }

                .picMarquee-top .hd .next {
                    background-position: 0 -140px;
                }

                .picMarquee-top .hd .prevStop {
                    background-position: -60px -100px;
                }

                .picMarquee-top .hd .nextStop {
                    background-position: -60px -140px;
                }

            .picMarquee-top .bd {
                padding: 10px;
            }

                .picMarquee-top .bd ul {
                    overflow: hidden;
                    zoom: 1;
                }

                    .picMarquee-top .bd ul li {
                        text-align: center;
                        zoom: 1;
                    }

                        .picMarquee-top .bd ul li .pic {
                            text-align: center;
                        }

                            .picMarquee-top .bd ul li .pic img {
                                width: 180px;
                                height: 160px;
                                display: block;
                                padding: 2px;
                                border: 1px solid #4cff00;
                            }

                            .picMarquee-top .bd ul li .pic a:hover img {
                                border-color: #999;
                            }

                        .picMarquee-top .bd ul li .title {
                            line-height: 15px;
                            color: blue;
                        }


       
    </style>

    <script type="text/javascript">
        $(".picMarquee-top").slide({ mainCell: ".bd ul", autoPlay: true, effect: "topMarquee", vis: 2, interTime: 50, trigger: "click" });
    </script>
