@using BS.Model
@model List<Author>
@{
    ViewBag.Title = "Danh mục tác giả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-center text-primary">Danh sách toàn bộ tác giả </h2>
<div class="col-md-12">
    <table class="table table-striped table-bordered">
        <tr>
            <th class="text-center text-danger">Tên tác giả</th>
            <th class="text-center text-danger">Ngày sinh</th>
            <th class="text-center text-danger">Quê quán</th>
            <th class="text-center text-danger">Giới thiệu</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td><a style="color:blue;" href="@Url.Action("BookBaseOnAuthor","Author",new { @authorId = item.AuthorId})">@item.Name</a></td>
            <td>@item.BirthDate.ToString("dd/MM/yyyy")</td>
            <td>@item.Address</td>
            <td>@item.Introduction</td>
        </tr>
        }
    </table>
</div>

